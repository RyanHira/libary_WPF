<Window x:Class="Bieb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bieb.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="LightGray">
    <Grid Background="LightGray" Grid.Row="1" Margin="25,40,25,15" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!-- Title -->
        <TextBlock Text="Library" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,8,0,0" Grid.RowSpan="3" />

        <!-- Subtitle -->
        <Button Grid.Row ="2" x:Name="Authors" Content="Go to Authors" Click="GoToAuthorsButton_Click" Margin="34,159,404,125" Background="Blue" Foreground="White"   />
        <Button Grid.Row="2" x:Name="BiebItems" Content="Go to Bieb Items" Click="GoToBiebItemsButton_Click" Margin="434,159,31,125" Background="Blue" Foreground="White"   />

    </Grid>
</Window>
